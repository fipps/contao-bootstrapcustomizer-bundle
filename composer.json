{
    "name": "fipps/contao-bootstrapcustomizer-bundle",
    "description": "Contao 4 Bootstrap Customizer Bundle",
    "keywords": [
        "Contao",
        "Bootstrap",
        "css",
        "grid",
        "Customize",
        "Theme",
        "Side Menu",
        "Vertical Navigation"
    ],
    "type": "contao-bundle",
    "homepage": "http://gitlab.fipps.de/contao/contao4/contao-bootstrapcustomizer-bundle",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Arne Borchert",
            "homepage": "https://www.fipps.de",
            "role": "Developer"
        },
		{
			"name": "Ashley James Naveso Cranford",
			"role": "Developer"
		}
    ],
    "support": {
        "issues": "http://gitlab.fipps.de/contao/contao4/contao-bootstrapcustomizer-bundle/issues"
    },
    "require": {
        "php": "^7.0",
        "contao/core-bundle": "~4.4",
        "contao-community-alliance/meta-palettes": "^2.0",
        "fipps/contao-prefixfree-bundle": "^1.0",
        "heimrichhannot/contao-be_explanation-bundle": "^2.2",
        "leafo/scssphp": "^0.7.7",
        "menatwork/contao-multicolumnwizard": "^3.3",
        "twbs/bootstrap": "^4.3"
    },
    "suggest": {
        "agoat/contao-autoprefixer": "Contao 4 autoprefixer plugin",
        "contao-bootstrap/bundle": "Contao 4 Bootstrap Bundle",
        "fipps/contao-parallax-bundle": "Fipps Contao 4 Parallax Bundle",
        "fipps/contao-tinymceplugins-bundle": "Fipps Contao TinyMCE Plugin"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Fipps\\BootstrapCustomizerBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "extra": {
        "contao-manager-plugin": "Fipps\\BootstrapCustomizerBundle\\ContaoManager\\Plugin"
    }
}