html {
    font-size: $font-size-root;
}

h1, .h1 {
    color: $h1-color;
}
h2, .h2 {
    color: $h2-color;
}
h3, .h3 {
    color: $h3-color;
}
h4, .h4 {
    color: $h4-color;
}
h5, .h5 {
    color: $h5-color;
}
h6, .h6 {
    color: $h6-color;
}

.lead {
    font-family: $lead-font-family;
    color: $lead-color;
}

.teaser {
    @extend .lead
}

.highlight {
    color: $info;
}
.confirmation  {
    color: $success;
}
.information {
    color: $info;
}
.warning {
    color: $warning;
}
.error {
    color: $danger;
}

.table thead:first-child tr:first-child th,
.table thead:first-child tr:first-child td,
.table tbody:first-child tr:first-child th,
.table tbody:first-child tr:first-child td,
.table tfoot:first-child tr:first-child th,
.table tfoot:first-child tr:first-child td {
    border-top: 0;
}

.table th, .table td {
    white-space: nowrap;
}

@import "bundles/fippsbootstrapcustomizer/scss/mixins/hovereffects";
@each $color, $value in $theme-colors {
    @include bg-lighten(".bg-lighten-hover-#{$color}", $value);
    @include bg-darken(".bg-darken-hover-#{$color}", $value);
    @include text-hover(".text-hover-#{$color}", $value);
    @include border-hover(".border-hover-#{$color}", $value);
    @include bg-hover(".bg-hover-#{$color}", $value);
}
@include text-hover(".text-hover-white", $white);
@include text-hover(".text-hover-black", $black);
@include border-hover(".border-hover-white", $white);
@include border-hover(".border-hover-black", $black);

@import "bundles/fippsbootstrapcustomizer/scss/mixins/striped";
@each $color, $value in $theme-colors {
    @include bg-striped(".bg-striped-#{$color}", $value);
}