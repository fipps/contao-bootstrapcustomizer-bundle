$transition-base:                   all {{ transitionBaseDelay|isNotNull?transitionBaseDelay|abs/1000: '200'}}ms {{ transitionBaseTiming|isNotNull?transitionBaseTiming|raw: 'ease-in-out'}};
$transition-fade:                   opacity {{ transitionFadeDelay|isNotNull?transitionFadeDelay|abs/1000: '150'}}ms {{ transitionFadeTiming|isNotNull?transitionFadeTiming|raw: 'linear'}};
$transition-collapse:               height {{ transitionCollapseDelay|isNotNull?transitionCollapseDelay|abs/1000: '350'}}ms {{ transitionCollapseTiming|isNotNull?transitionCollapseTiming|raw: 'ease'}};


// stylelint-disable-next-line scss/dollar-variable-default
$embed-responsive-aspect-ratios: (
{% for ratio in embedResponsiveAspectRatios  %}
{% if ratio.h|isNotNull and ratio.v|isNotNull %}
({{ ratio.h }} {{ ratio.v }}),
{% endif %}
{% endfor %}
