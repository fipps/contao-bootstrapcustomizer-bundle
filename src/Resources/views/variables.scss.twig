/* Customization */

// Color system

$white:   #fff;
$black:   #000;
$primary: $blue;

{% for color in grayColors  %}
{% if color.value|isNotNull %}
${{ color.name }}: {{ color.value|cssColorParser }};
{% endif %}
{% endfor %}


{% for color in themeColors  %}
{% if color.value|isNotNull %}
${{ color.name }}: {{ color.value|cssColorParser }};
{% endif %}
{% endfor %}


$theme-colors: (
{% for color in themeColors  %}
{% if color.value|isNotNull %}
        "{{ color.name }}": ${{ color.name }},
{% endif %}
{% endfor %}
);

// Set a specific jump point for requesting color jumps
$theme-color-interval:      {{ themeColorInterval|isNotNull?themeColorInterval:'8%'}};

// The yiq lightness value that determines when the lightness of color changes from "dark" to "light". Acceptable values are between 0 and 255.
$yiq-contrasted-threshold:  {{ yiqContrastedThreshold|isNotNull?yiqContrastedThreshold:'150'}};

// Customize the light and dark text colors for use in our YIQ color contrast function.
$yiq-text-dark:                     {{ yiqTextDark|isNotNull?yiqTextDark|cssColorParser:'$gray-900' }};
$yiq-text-light:                    {{ yiqTextLight|isNotNull?yiqTextLight|cssColorParser:'$white' }};


// Options
//
// Quickly modify global styling by enabling or disabling optional features.

$enable-caret:                                {{ enableCaret==1?'true':'false'}};
$enable-rounded:                              {{ enableRounded==1?'true':'false' }};
$enable-shadows:                              {{ enableShadows==1?'true':'false' }};
$enable-gradients:                            {{ enableGradients==1?'true':'false' }};
$enable-transitions:                          {{ enableTransitions==1?'true':'false' }};
$enable-prefers-reduced-motion-media-query:   {{ enablePrefersReducedMotionMediaQuery==1?'true':'false' }};
$enable-grid-classes:                         {{ enableGridClasses==1?'true':'false' }};
$enable-pointer-cursor-for-buttons:           {{ enablePointerCursorForButtons==1?'true':'false' }};
$enable-print-styles:                         {{ usePrinting==1?'true':'false' }};
$enable-responsive-font-sizes:                {{ enableResponsiveFontSizes==1?'true':'false' }};
$enable-validation-icons:                     {{ enableValidationIcons==1?'true':'false' }};
$enable-deprecation-messages:                 {{ enableDeprecationMessages==1?'true':'false' }};


// Spacing
//
// Control the default styling of most Bootstrap elements by modifying these
// variables. Mostly focused on spacing.
// You can add more entries to the $spacers map, should you need more variation.

$spacer:                            {{ spacer|isNotNull?spacer|cssLengthParser:'1rem' }};


// Body
//
// Settings for the `<body>` element.

$body-bg:                           {{ bodyBg|isNotNull?bodyBg|cssColorParser:'$white' }};
$body-color:                        {{ bodyColor|isNotNull?bodyColor|cssColorParser:'$gray-900' }};


// Links
//
// Style anchor elements.

$link-color:                        {{ linkColor|isNotNull?linkColor|cssColorParser:'$primary' }};
$link-decoration:                   {{ linkDecoration|isNotNull?linkDecoration:'none'}};
$link-hover-color:                  {{ linkHoverColor|isNotNull?linkHoverColor|cssColorParser:'darken($link-color, 15%)'}};
$link-hover-decoration:             {{ linkHoverDecoration|isNotNull?linkHoverDecoration:'underline'}};

$emphasized-link-hover-darken-percentage: {{ emphasizedLinkHoverDarkenPercentage|isNotNull?emphasizedLinkHoverDarkenPercentage:'15%'}};


// Paragraphs
//
// Style p element.

$paragraph-margin-bottom:           {{ paragraphMarginBottom|isNotNull?paragraphMarginBottom|cssLengthParser:'1rem' }};

// Grid breakpoints
//
// Define the minimum dimensions at which your layout will change,
// adapting to different screen sizes, for use in media queries

$grid-breakpoints: (
{% for breakpoint in breakpoints %}
{% if breakpoint.width|isNotNull %}
{{ breakpoint.name }}: {{ breakpoint.width|cssLengthParser }},
{%  endif %}
{% endfor %}
);

// Grid containers
//
// Define the maximum width of `.container` for different screen sizes.

$container-max-widths: (
{% for breakpoint in breakpoints %}
{% if breakpoint.containerMaxSize|isNotNull and breakpoint.containerMaxSize.value > 0 %}
{{ breakpoint.name }}: {{ breakpoint.containerMaxSize|cssLengthParser }},
{%  endif %}
{% endfor %}
);

// Grid columns
//
// Set the number of columns and specify the width of the gutters.

$grid-columns:                      {{ gridColumns|isNotNull?gridColumns:'12' }};
$grid-gutter-width:                 {{ gridGutterWidth|isNotNull?gridGutterWidth|cssLengthParser:'30px' }};


// Components
//
// Define common padding and border radius sizes and more.

$line-height-lg:                    {{ lineHeightLg|isNotNull?lineHeightLg|cssLengthParser:1.5 }};
$line-height-sm:                    {{ lineHeightSm|isNotNull?lineHeightSm|cssLengthParser:1.5 }};

$border-width:                      {{ borderWidth|isNotNull?borderWidth|cssLengthParser:'1px'}};
$border-color:                      {{ borderColor|isNotNull?borderColor|cssColorParser:'$gray-300'}};
$colors: (
        "border-color": $border-color
);

$border-radius:                     {{ borderRadius|isNotNull?borderRadius|cssLengthParser:'.25rem' }};
$border-radius-sm:                  {{ borderRadiusSm|isNotNull?borderRadiusSm|cssLengthParser:'.2rem' }};
$border-radius-lg:                  {{ borderRadiusLg|isNotNull?borderRadiusLg|cssLengthParser:'.3rem' }};

$rounded-pill:                      {{ roundedPill|isNotNull?roundedPill|cssLengthParser:'50rem' }};

$box-shadow:                        {{ boxShadow|isNotNull?boxShadow|raw: '0 .5rem 1rem rgba($black, .15)'}};
$box-shadow-sm:                     {{ boxShadowSm|isNotNull?boxShadowSm|raw: '0 .125rem .25rem rgba($black, .075)'}};
$box-shadow-lg:                     {{ boxShadowLg|isNotNull?boxShadowLg|raw: '0 1rem 3rem rgba($black, .175)'}};

//$component-color:                   {{ componentColor|isNotNull?componentColor|cssColorParser:'$body-color' }};

$component-active-color:            {{ componentActiveColor|isNotNull?componentActiveColor|cssColorParser:'$white'}};
$component-active-bg:               {{ componentActiveBg|isNotNull?componentActiveBg|cssColorParser:'$primary' }};


$caret-width:                       {{ caretWidth|isNotNull?caretWidth|cssLengthParser:'.3em' }};
