$nav-divider-color:                 {{ navDividerColor.0|length>0?navDividerColor|cssColorParser:'$gray-200' }};
$nav-divider-margin-y:              {{ navDividerMarginY.value|length>0?navDividerMarginY|cssLengthParser:'$spacer / 2'}};

