$h6-font-size:                      {{ h6FontSize.value|length>0?h6FontSize|cssLengthParser: '$font-size-base'}};

$headings-margin-bottom:            {{ headingsMarginBottom.value|length>0?headingsMarginBottom|cssLengthParser:'$spacer / 2'}};
$headings-font-family:              {{ headingsFontFamily|length>0?headingsFontFamily|raw: 'inherit' }};
