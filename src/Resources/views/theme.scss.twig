/*
------------------------------------------------------------
Customization
------------------------------------------------------------
*/
$white:                             {{ white.0|length>0?white|cssColorParser:'#fff' }};
$gray-100:                          {{ gray100.0|length>0?gray100|cssColorParser:'#f8f9fa' }};
$gray-200:                          {{ gray200.0|length>0?gray200|cssColorParser:'#e9ecef' }};
$gray-300:                          {{ gray300.0|length>0?gray300|cssColorParser:'#dee2e6' }};
$gray-400:                          {{ gray400.0|length>0?gray400|cssColorParser:'#ced4da' }};
$gray-500:                          {{ gray500.0|length>0?gray500|cssColorParser:'#adb5bd' }};
$gray-600:                          {{ gray600.0|length>0?gray600|cssColorParser:'#6c757d' }};
$gray-700:                          {{ gray700.0|length>0?gray700|cssColorParser:'#495057' }};
$gray-800:                          {{ gray800.0|length>0?gray800|cssColorParser:'#343a40' }};
$gray-900:                          {{ gray900.0|length>0?gray900|cssColorParser:'#212529' }};
$black:                             {{ black.0|length>0?black|cssColorParser:'#000' }};
$primary:                           {{ primary.0|length>0?primary|cssColorParser:'#007bff' }};
$secondary:                         {{ secondary.0|length>0?secondary|cssColorParser:'#6c757d' }};
$success:                           {{ success.0|length>0?success|cssColorParser:'#28a745' }};
$info:                              {{ info.0|length>0?info|cssColorParser:'#17a2b8' }};
$warning:                           {{ warning.0|length>0?warning|cssColorParser:'#ffc107' }};
$danger:                            {{ danger.0|length>0?danger|cssColorParser:'#dc3545' }};
$light:                             {{ light.0|length>0?light|cssColorParser:'$gray-100'}};
$dark:                              {{ dark.0|length>0?dark|cssColorParser:'$gray-800' }};

{% if tertiary.0|length>0 %}
$tertiary:                          {{ tertiary|cssColorParser }};
$theme-colors: (
    "tertiary": $tertiary
);
{% endif %}


$yiq-text-dark:                     {{ yiqTextDark.0|length>0?yiqTextDark|cssColorParser:'$gray-900' }};
$yiq-text-light:                    {{ yiqTextLight.0|length>0?yiqTextLight|cssColorParser:'$white' }};

$grid-columns:                      12;
$grid-gutter-width:                 30px;

$enable-caret:                      {{ enableCaret==1?'true':'false'}};
$enable-rounded:                    {{ enableRounded==1?'true':'false' }};
$enable-shadows:                    {{ enableShadows==1?'true':'false' }};
$enable-gradients:                  {{ enableGradients==1?'true':'false' }};

$spacer:                            {{ spacer.value|length>0?spacer|cssLengthParser:'1rem' }};

// Body
$body-bg:                           {{ bodyBg.0|length>0?bodyBg|cssColorParser:'$white' }};
$body-color:                        {{ bodyColor.0|length>0?bodyColor|cssColorParser:'$gray-900' }};

// Links
$link-color:                        {{ linkColor.0|length>0?linkColor|cssColorParser:'$primary' }};
$link-decoration:                   {{ linkDecoration|length>0?linkDecoration:'none'}};
