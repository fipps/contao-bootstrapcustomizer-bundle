$table-border-width:                {{ tableBorderWidth.value|length>0?tableBorderWidth|cssLengthParser:'$border-width'}};
$table-border-color:                {{ tableBorderColor.0|length>0?tableBorderColor|cssColorParser:'$gray-300' }};

$table-head-bg:                     {{ tableHeadBg.0|length>0?tableHeadBg|cssColorParser: '$gray-200'}};
