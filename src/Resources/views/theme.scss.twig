$input-btn-padding-y-lg:            {{ inputBtnPaddingYLg.value|length>0?inputBtnPaddingYLg|cssLengthParser:'.5rem'}};
$input-btn-padding-x-lg:            {{ inputBtnPaddingXLg.value|length>0?inputBtnPaddingXLg|cssLengthParser: '1rem'}};
$input-btn-line-height-lg:          {{ inputBtnLineHeightLg|length>0?inputBtnLineHeightLg|cssLengthParser: '$line-height-lg'}};

$input-btn-border-width:            {{ inputBtnBorderWidth.value|length>0?inputBtnBorderWidth|cssLengthParser:'$border-width' }};

