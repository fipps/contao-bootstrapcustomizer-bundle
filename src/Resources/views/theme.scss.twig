$font-size-base:                    {{ fontSizeBase.value|length>0?fontSizeBase|cssLengthParser: '1rem'}};
$font-size-lg:                      ($font-size-base * 1.25);
$font-size-sm:                      ($font-size-base * .875);

$font-weight-normal:                {{ fontWeightNormal|length>0?fontWeightNormal:400 }};
$font-weight-light:                 {{ fontWeightLight|length>0?fontWeightLight:300 }};
$font-weight-bold:                  {{ fontWeightBold|length>0?fontWeightBold:700 }};

$font-weight-base:                  {{ fontWeightBase|length>0?fontWeightBase:'$font-weight-normal' }};
$line-height-base:                  {{ lineHeightBase|length>0?lineHeightBase|cssLengthParser:1.5 }};

$h1-font-size:                      {{ h1FontSize.value|length>0?h1FontSize|cssLengthParser: '$font-size-base * 2.5'}};
$h2-font-size:                      {{ h2FontSize.value|length>0?h2FontSize|cssLengthParser: '$font-size-base * 2'}};
