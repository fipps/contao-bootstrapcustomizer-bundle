$headings-line-height:              {{ headingsLineHeight|length>0?headingsLineHeight|cssLengthParser:1.2}};
$headings-color:                    {{ headingsColor.0|length>0?headingsColor|cssColorParser:'inherit'}};

$lead-font-size:                    {{ leadFontSize.value|length>0?leadFontSize|cssLengthParser:'$font-size-base*1.25'}};
$lead-font-weight:                  {{ leadFontWeight|length>0?leadFontWeight: 300 }};

$small-font-size:                   0.8em;

$text-muted:                        {{ textMuted.0|length>0?textMuted|cssColorParser:'$gray-600'}};

$hr-border-color:                   {{ hrBorderColor.0|length>0?hrBorderColor|cssColorParser:'rgba($black, .1)'}};
$hr-border-width:                   {{ hrBorderWidth.value|length>0?hrBorderWidth|cssLengthParser:'$border-width' }};

$hr-margin-y:                       {{ hrMarginY.value|length>0?hrMarginY|cssLengthParser:'$spacer'}};

$list-inline-padding:               {{ listInlinePadding.value|length>0?listInlinePadding|cssLengthParser:'.5rem' }};

// Tables
$table-cell-padding:                {{ tableCellPadding.value|length>0?tableCellPadding|cssLengthParser:'.75rem' }};
$table-cell-padding-sm:             {{ tableCellPaddingSm.value|length>0?tableCellPaddingSm|cssLengthParser:'.3rem' }};

$table-bg:                          {{ tableBg.0|length>0?tableBg|cssColorParser: 'transparent' }};
$table-accent-bg:                   {{ tableAccentBg.0|length>0?tableHoverBg|cssColorParser:'rgba($black, .05)' }};
