h1, .h1 {
    color: {{ (h1Color|length>0?h1Color:'$headings-color') }}
}

{% if h1BorderWidth is defined and h1BorderWidth|length>0 %}
h1,.h1 {
    position: relative;
    overflow: hidden;
}
h1:after, .h1:after {
    position: absolute;
    content: '';
    border-bottom: {{ h1BorderWidth }} solid {{ (h1BorderColor|length>0?h1BorderColor:'inherit') }} ;
    margin-left: 0.25em;
    width: 100%;
    bottom: 0.2em;
}
h1.noborder:after, .h1.noborder:after {
    display: none !important;
}
{% endif %}

