$border-width:                      {{ borderWidth.value|length>0?borderWidth|cssLengthParser:'1px'}};
$border-color:                      {{ borderColor.0|length>0?borderColor|cssColorParser:'$gray-300'}};
$colors: (
    "border-color": $border-color
);

$border-radius:                     {{ borderRadius|length>0?borderRadius|cssLengthParser:'.25rem' }};
$border-radius-sm:                  {{ borderRadiusSm|length>0?borderRadiusSm|cssLengthParser:'.2rem' }};
$border-radius-lg:                  {{ borderRadiusLg|length>0?borderRadiusLg|cssLengthParser:'.3rem' }};

$box-shadow:                        {{ boxShadow|length>0?boxShadow|raw: 'none'}};
$box-shadow-sm:                     {{ boxShadowSm|length>0?boxShadowSm|raw: 'none'}};
$box-shadow-lg:                     {{ boxShadowLg|length>0?boxShadowLg|raw: 'none'}};

$component-active-color:            {{ componentActiveColor.0|length>0?componentActiveColor|cssColorParser:'$white'}};
$component-active-bg:               {{ componentActiveBg.0|length>0?componentActiveBg|cssColorParser:'$primary' }};

// Fonts
$font-family-sans-serif:            {{ fontFamilySansSerif|length>0?fontFamilySansSerif|raw:'-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"' }};
