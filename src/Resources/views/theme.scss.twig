$nav-vertical-padding-left:         {{ navVerticalPaddingLeft.value|length>0?navVerticalPaddingLeft|cssLengthParser:'$spacer' }} ;
$nav-vertical-item-align:           {{ vavVerticalItemAlign|length>0?vavVerticalItemAlign:'center'}};

