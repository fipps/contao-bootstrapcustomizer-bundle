$navbar-nav-link-padding-x:         {{ navbarNavLinkPaddingX.value|length>0?navbarNavLinkPaddingX|cssLengthParser: '0.5rem' }};
$navbar-brand-font-size:            {{ navbarBrandFontSize.value|length>0?navbarBrandFontSize|cssLengthParser: '$font-size-lg' }};
